{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Current C++ File",
            "type": "shell",
            "command": "mkdir -p ${workspaceFolder}/build && g++ \"${file}\" -o \"${workspaceFolder}/build/${fileBasenameNoExtension}\" && echo âœ… Built: build/${fileBasenameNoExtension} && \"${workspaceFolder}/build/${fileBasenameNoExtension}\"",
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": [
                        "-c"
                    ]
                }
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean Build Files",
            "type": "shell",
            "command": "rm -rf ${workspaceFolder}/build && echo ðŸ§¹ Cleaned build folder",
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": [
                        "-c"
                    ]
                }
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}